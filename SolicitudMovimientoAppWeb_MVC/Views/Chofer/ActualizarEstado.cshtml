@model SolicitudMovimientoAppWeb_MVC.Models.Movimiento

<h2>Detalle/Actualizar Estado</h2>

<form asp-action="ActualizarEstado" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Descripción</label>
        <input type="text" class="form-control" asp-for="Descripcion" readonly />
    </div>
    <div class="form-group">
        <label>Código Material</label> 
        <input type="text" class="form-control" asp-for="CodigoMaterial" readonly/>
        <span asp-validation-for="CodigoMaterial" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label>Lugar de Salida</label>
        <input type="text" class="form-control" value="@Model.LugarSalida.Nombre, @Model.LugarSalida.Direcion" readonly/>
    </div>
    <div class="form-group">
        <label>Lugar Destino</label>
        <input type="text" class="form-control" value="@Model.LugarDestino.Nombre, @Model.LugarDestino.Direcion" readonly/>
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select class="form-control" asp-for="EstadoId" asp-items="@(new SelectList(ViewBag.Estados, "Id", "Descripcion"))">
            <option value="">Seleccione un estado</option>
        </select>
    </div>
    <div class="form-group">
        <label>Foto de Entrega</label>
        <input type="file" class="form-control" asp-for="Foto" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

@if (!ViewData.ModelState.IsValid)

{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

